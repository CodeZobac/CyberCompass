# Application Settings
APP_NAME="Cyber Compass AI Backend"
APP_VERSION="2.0.0"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="INFO"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=4

# Security
SECRET_KEY="your-secret-key-here-change-in-production"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_MINUTES=60
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Database
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/cyber_compass_ai"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Supabase
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_MAX_CONNECTIONS=50

# OpenAI API (for CrewAI agents)
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4"
OPENAI_TEMPERATURE=0.7

# CrewAI Configuration
CREWAI_VERBOSE=true
CREWAI_MEMORY_ENABLED=true
CREWAI_MAX_ITERATIONS=10

# File Storage
UPLOAD_DIR="./uploads"
MAX_UPLOAD_SIZE_MB=50

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# WebSocket Configuration
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10
MAX_WEBSOCKET_CONNECTIONS=1000

# Analytics
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=300

# Localization
DEFAULT_LOCALE="en"
SUPPORTED_LOCALES="en,pt"

# Monitoring (Optional)
SENTRY_DSN=""
PROMETHEUS_ENABLED=false
